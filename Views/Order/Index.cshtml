@model IEnumerable<MebelSayt.Models.AdminOrderModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Sifarişlərin Listəsi</h2>
    <hr />
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nömrəsi</th>
                <th>Tarixi</th>
                <th>Məbləğ</th>
                <th>Statusu</th>
                <th style="width:12%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td>@item.Total Azn</td>
                    <td>@item.OrderState</td>
                    <td><a href="/order/details/@item.Id"><i class="fa fa-angle-double-right"></i> Detaylı Baxış</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


