<style>
    .popular-products {
        width: 100%;
        height: auto;
        background-color: #EEE;
    }

    .h3-color {
        margin-top: 1.7rem;
        color: #444;
        font-weight: bold;
    }

    .h6-color {
        color: #777;
    }

    .card-title {
        font-size: 22px;
        color: #000;
    }

    .btn-orange {
        background: #cc9600;
        color: white;
    }

    .triangle {
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 0 70px 100px;
        border-color: transparent transparent #f5ce0a transparent;
        position: absolute;
        bottom: 1.3rem;
        right: 5px;
    }

    .card-img {
        height: 225px;
    }

    .triangle:hover {
        transition: ease-in 0.5s;
        border-color: transparent transparent #000 transparent;
    }
</style>
<div class="popular-products pt-5 pb-5">

    <h3 class="h3-color text-center">ƏN POPULYAR MEBELLƏRİMİZ</h3>
    <h6 class="h6-color text-center mb-5">Son Mebellərimizi Gözdən Keçirin</h6>

    <div class="container">
        <div class="row">

            @for (int i = 0; i < 6; i++)
            {
            <div class="col-md-4 col-sm-6 mb-2">
                <a href="/home/details/@Model[i].Id">
                    <div class="text-white mb-3">
                        <img class="card-img" src="@Model[i].Image" alt="Card image">
                        <div class="card-img-overlay">
                            <div class="img-overlay">
                                <div class="container mt-3">
                                    <h5 class="card-title mb-0">@Model[i].Name</h5>
                                    <h6 class="popular-price">@Model[i].Price <span>&#8916;</span></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
            </div>
            }
        </div>
    </div>
    <div class="text-center pt-4">
        <a href="/Home/List" class="btn btn-orange">Bütün Mebellər</a>
    </div>
</div>