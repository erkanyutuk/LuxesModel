@model MebelSayt.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style>
    .field-validation-error{color:crimson;}
    .field-validation-valid{display:none;}
    .input-validation-error{border:1px solid #f00; background-color:#fee}
    .validation-summary-errors{font-weight:bold;color:#f00;}
    .field-validation-valid{display:none;}
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Sifariş Məlumatları</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Name">Ad</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Surname">Soyad</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputAddress">Address</label>
                            @Html.TextBoxFor(x => x.Adress1, new { @class = "form-control",@required = "required" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputAddress2">Address 2</label>
                            @Html.TextBoxFor(x => x.Adress2, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">Şəhər</label>
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPhone">Telefon</label>
                            @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Ekstra">Əlavə Məlumatlar</label>
                        @Html.TextAreaFor(x => x.Ekstra, new { @class = "form-control" })

                    </div>

                    <button type="submit" class="btn btn-success">Tamamla</button>
                </form>
            }
        </div>
    </div>

</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>