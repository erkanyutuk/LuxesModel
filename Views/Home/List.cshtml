@using MebelSayt.Models;
@model IEnumerable<ProductModel>


<div class="container mb-4 mt-4">
    <div class="row">
        <div class="col-md-3 col-sm-12">
            @Html.Action("GetCatagories", "Home")
        </div>
        <div class="col-md-9 col-sm-12">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle"></i> Bu kateqoriyada mebel tapılmadı.
                </div>

            }
             <div class="row">


                @foreach (var product in Model)
                {<div class="col-md-4 col-sm-6 ">
                        <div class="card mb-3">
                            <img src="/theme/img/slide-2.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="Home/Details/@product.Id">@product.Name</a>
                                </h5>
                                <p class="card-text description">@product.Description</p>
                                <div class="product-footer">

                                    <span class="text-muted">
                                        @product.Price <span>&#8916;</span>
                                    </span>

                                    <a href="/Home/Details/@product.Id">
                                        <button class="btn btn-primary btn-sm float-right">
                                            <i class="fa fa-angle-double-right" style="font-size:15px;"></i> Detaylı baxış
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>
</div>
